<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	autoReload="true"
	throwConfigExceptions="true"
	internalLogLevel="Off"
	internalLogFile="${basedir}/NLog.Internal.Log">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore" />
		<add assembly="NLog.Targets.Trace"/>
	</extensions>

	<targets>
		<target
			xsi:type="Console"
			name="Console">
			<layout xsi:type="JsonLayout" maxRecursionLimit="5">
				<attribute name="datetime" layout="${date:format=o}" />
				<attribute name="level" layout="${level:upperCase=true}" />
				<attribute name="logger" layout="${logger}" />
				<attribute name="message" layout="${message}" />
				<attribute name="exception" layout="${exception:format=@:innerFormat=@:maxInnerExceptionLevel=5}" />
				<attribute name="exceptionType" layout="${exception:format=Type}" />
				<attribute name="exceptionMessage" layout="${exception:format=Message,method:maxInnerExceptionLevel=5:innerExceptionSeparator=|}" />
				<attribute name="exceptionStackTrace" layout="${exception:format=StackTrace:exceptionDataSeparator=\r\n,method:maxInnerExceptionLevel=5}" />
				<attribute name="traceId" layout="${mdlc:traceId}" />
				<attribute name="correlationId" layout="${mdlc:correlationId}" />
				<attribute name="service" layout="${mdlc:service}" />
				<attribute name="method" layout="${mdlc:method}" />
				<attribute name="duration" layout="${mdlc:duration}" />
				<attribute name="httpRequestUrl" layout="${mdlc:httpRequestUrl}" />
				<attribute name="httpRequestStatusCode" layout="${mdlc:httpRequestStatusCode}" />
			</layout>
		</target>
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="BlueBrown.Common.HealthChecks.*" levels="Trace,Debug,Info" final="true" />
		<logger name="BlueBrown.Diagnostics.HealthChecks.*" levels="Trace,Debug,Info" final="true" />	
		<logger name="Microsoft*" levels="Trace,Debug,Info" final="true" />
		<logger name="App.Metrics*" levels="Trace,Debug,Info" final="true" />
		<logger name="System.Net.Http.HttpClient*" levels="Trace,Debug,Info" final="true" />
		<logger name="Quartz*" levels="Trace,Debug,Info" final="true" />

		<logger name="*" minlevel="Trace" writeTo="Console" />
	</rules>
</nlog>